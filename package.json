{
  "name": "core-api",
  "version": "0.0.1",
  "description": "Learning project from fantastic spectrum code base.",
  "scripts": {
    "prebuild": "rm -rf ./build",
    "build": "npm run prebuild && backpack build",
    "dev": "DEBUG=api* backpack",
    "start": "node ./build/main",
    "deploy": "npm run db:migrate && npm run start",
    "db:drop": "npm run rethinkdb:migrate -- down",
    "db:migrate": "npm run rethinkdb:migrate -- up",
    "db:seed": "node src/seed/index.js",
    "db:reset": "yarn run db:drop && yarn run db:migrate && yarn run db:seed",
    "rethinkdb:migrate": "rethinkdb-migrate -f ./src/migrations/config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RockinY/core-api.git"
  },
  "keywords": [
    "graphql"
  ],
  "author": "BranLiang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RockinY/core-api/issues"
  },
  "homepage": "https://github.com/RockinY/core-api#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "backpack-core": "^0.7.0",
    "casual": "^1.5.19",
    "eslint-plugin-flowtype": "^2.46.3",
    "faker": "^4.1.0",
    "flow-bin": "^0.70.0",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "ali-oss": "^5.2.0",
    "apollo-server-express": "^1.3.6",
    "apollo-upload-server": "^5.0.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "dataloader": "^1.4.0",
    "dotenv": "^5.0.1",
    "draft-js": "^0.10.0",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-cost-analysis": "^1.0.1",
    "graphql-date": "^1.0.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-log": "^0.1.3",
    "graphql-tools": "^3.0.1",
    "helmet": "^3.12.0",
    "hpp": "^0.2.2",
    "jsonwebtoken": "^8.2.1",
    "keygrip": "^1.0.2",
    "lodash": "^4.17.10",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "raven": "^2.6.0",
    "rethinkdb-migrate": "^1.3.0",
    "rethinkdbdash": "^2.3.31",
    "slugg": "^1.2.1",
    "toobusy-js": "^0.5.1",
    "uuid": "^3.2.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  }
}
